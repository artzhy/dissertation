package com.example.dissertationandroid;

import java.util.ArrayList;

import org.apache.http.client.HttpClient;
import org.apache.http.client.methods.HttpPost;
import org.json.JSONObject;



public class RESTRequest {
	public ArrayList<RESTDataItem> data = new ArrayList<RESTDataItem>();
	private String uri, RESTService, RESTFunction;
	private HttpClient httpClient;
	private HttpPost httpPost;
	private JSONObject dataToBeSumitted;
	
	public RESTRequest(String uri, String RESTService, String RESTFunction) {
		this.uri = uri;	
		this.RESTService = RESTService;
		this.RESTFunction = RESTFunction;
	
	}
	
	public void sendRequest() {
		HttpPost httpPost = new HttpPost(this.uri);
		httpPost.setHeader("content-type", "application/json");
		
		dataToBeSubmitted = new JSONObject();
		
		
	}
	
	
}

